@model Nintex_TinyUrl.Models.UrlModel
@{
    ViewBag.Title = "Nintex URL shortener";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<body>
    <div class="container register">
        <div class="row">
            <div class="col-md-12">
                <div class="tab-content" id="myTabContent">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs">
                        <p class="site-title col-md-offset-3">
                            <a href="@Url.Action("Index", "Home")">
                                <img src="~/Images/Nintex-Logo.png" />
                            </a>
                        </p>
                        <li class="active">
                            @Html.ActionLink("Shorten Url", "Index", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Inflate Url", "InflateUrl", "Home")
                        </li>
                    </ul>
                    <div class="row register-form">
                        <div class="col-md-offset-2 col-md-6">
                            <h3 class="register-heading">Shorten Url</h3>
                            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                            {
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.LongURL, new { placeholder = "URL you would like to have shortened", @class = "form-control" })

                                </div>
                                <div class="form-group">
                                    @if (Model != null)
                                    {
                                        if (Model.ShortURL != null)
                                        {
                                            <div>
                                                <input type="text" name="ShortUrl" class="form-control" placeholder="Shorten Url *" value="@Model.ShortURL" readonly />
                                            </div>
                                        }
                                    }
                                </div>
                                <div class="form-group">
                                    <input type="submit" name="LGform1" class="btnContactSubmit" value="Shorten Url" />
                                </div>
                            }
                            @*</form>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>