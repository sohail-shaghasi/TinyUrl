@model Nintex_TinyUrl.Models.UrlModel
@{
    ViewBag.Title = "InflateUrl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container register">
    <div class="row">
        <div class="col-md-12">
            <div class="tab-content" id="myTabContent">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs">
                    <p class="site-title col-md-offset-3">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="~/Images/Nintex-Logo.png" />
                        </a>
                    </p>
                    <li>
                        @Html.ActionLink("Shorten Url", "Index", "Home")
                    </li>
                    <li class="active">
                        @Html.ActionLink("Inflate Url", "InflateUrl", "Home")
                    </li>
                </ul>
                <div class="row register-form">
                    <div class="col-md-offset-2 col-md-6">
                        <h3 class="register-heading">Expand URL</h3>
                        @using (Html.BeginForm("InflateUrl", "Home", FormMethod.Post))
                        {
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.ShortURL, new { placeholder = "URL you would like to have Un-Shortened", @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @if (Model != null)
                                {
                                    if (Model.LongURL != null)
                                    {
                                        <div>
                                            <input type="text" name="LongUrl" class="form-control" placeholder="Un-Shorten Url *" value="@Model.LongURL" readonly />
                                        </div>
                                    }
                                }
                            </div>
                            <div class="form-group">
                                <input type="submit" name="LGform1" class="btnContactSubmit" value="Shorten Url" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
